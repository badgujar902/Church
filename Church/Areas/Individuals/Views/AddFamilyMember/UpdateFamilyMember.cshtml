                                                @Html.TextBoxFor(m => m.IND_DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", id = "IND_DOB", @type = "date", @required = "required" })
                                            </div>
                                        </div>
                                    </div>  
                                    <div class="col-md-6">
