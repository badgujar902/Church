
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowEventImage</title>

    <style>
          body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: rgba(0, 0, 0, 0.8); /* Dark background for better contrast */
        }

        .image-container {
            position: relative;
            max-width: 90%;
            max-height: 90%;
        }

        .image-container img {
            max-width: 100%;
            max-height: 100%;
            display: block;
        }

        .close-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(0, 0, 0, 0.6);
            color: white;
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            cursor: pointer;
        }

        .close-button:hover {
            background: rgba(0, 0, 0, 0.8);
        }
    </style>
</head>

<body>
    <div class="image-container">
        <img src="@ViewBag.EventDisplayUrl" alt="Image with no description">
        <button class="lity-close" type="button" aria-label="Close (Press escape to close)" onclick="window.history.back()">×</button>
    </div>
</body>
</html>
