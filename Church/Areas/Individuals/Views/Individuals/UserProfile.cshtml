        if(Message!=null)
        {
            if(Icon!=null)
            {
                Swal.fire({
                    title: '',
                    text: Message,
                    icon: Icon,
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'Ok'
                });
              
            }

        }

        // Click event for opening file dialog
        $("#openFileDialog").click(function () {
            debugger;
            // Trigger click event on the hidden file input
            $("#fileInput").click();
        });

        // Change event for file input
        $("#fileInput").change(function () {
            debugger;
            var file = this.files[0];
            if (file) {
                // Check if the selected file type is allowed
                var allowedTypes = ['.png', '.jpg', '.jpeg'];
                //if (allowedTypes.indexOf(file.type) === -1) {
                //    alert('Only PNG, JPEG, and JPG files are allowed.');
                //    return;
                //}

                // Assuming you want to redirect to a specific URL with the selected file
                var formData = new FormData();
                formData.append("file", file);

                // Perform AJAX request or direct form submission to your action method
                $.ajax({
                    url: '/Individuals/MemberEditProfile/UpdateProfile', // Adjust URL as per your action method
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        // Handle success, e.g., redirect to another page
                        window.location.href = '/Individuals/Individuals/UserProfile'; // Redirect to success page
                    },
                    error: function (xhr, status, error) {
                        // Handle error
                        console.error(error);
                    }
                });
            }
        });
    });
